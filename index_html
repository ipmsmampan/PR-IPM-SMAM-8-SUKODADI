    <script>
        // Tampilkan bidang tertentu, sembunyikan yang lain
        function showBidang(id){
            // semua detail
            const panels = document.querySelectorAll('.detail-card');
            panels.forEach(p => {
                p.classList.remove('active');
                p.setAttribute('aria-hidden','true');
            });

            // aktifkan yang dipilih
            const sel = document.getElementById(id);
            if(sel){
                sel.classList.add('active');
                sel.setAttribute('aria-hidden','false');
                // scroll ke area detail (halus)
                sel.scrollIntoView({behavior:'smooth', block:'center'});
            }
        }

        // akses keyboard: tekan angka 1-4 untuk cepat memanggil bidang
        document.addEventListener('keydown', function(e){
            if(e.key === '1') showBidang('perkaderan');
            if(e.key === '2') showBidang('pengembangan');
            if(e.key === '3') showBidang('dakwah');
            if(e.key === '4') showBidang('seni');
        });

        // Optional: tampilkan bidang pertama saat halaman dimuat
        document.addEventListener('DOMContentLoaded', function(){ showBidang('perkaderan'); });
    </script>
